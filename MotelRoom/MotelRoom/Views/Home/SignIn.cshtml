
@{
    ViewData["Title"] = "SignIn";
}

<div class="card m-3">
    <h5 class="card-header">
        ĐĂNG NHẬP
    </h5>
    <div class="card-body">
        <form>
            <div class="form-group"> <label for="user-name">Tên người dùng</label> <input type="text" class="form-control" id="user-name" placeholder="Nhập tên người dùng"> </div>
            <div class="form-group"> <label for="pwd">Mật khẩu</label> <input type="password" class="form-control" id="pwd" placeholder="Nhập mật khẩu"> </div>
            <div class="checkbox"> <label><input type="checkbox"> Ghi nhớ tài khoản</label> </div> <button type="submit" class="btn btn-primary">Đăng nhập</button>
        </form>
    </div>
    <div class="card-footer">
        Chưa phải là thành viên? <a class="text-decoration-none" asp-controller="Home" asp-action="Register">Đăng ký tài khoản</a>
    </div>
</div>

