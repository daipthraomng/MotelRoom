@{
    ViewData["Title"] = "Room Info";
    Layout = "_Layout2";
}

<head>
    <!-- Font Awesome Icon Library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .checked {
            color: orange;
        }
        .fa-star {
            font-size: 15px;
        }
        /*ẩn input radio - vì chúng ta đã có label là GUI*/
        #rating > input {
            display: none;
        }
        /*1 ngôi sao*/
        #rating > label:before {
            margin: 1px;
            font-size: 15px;
            font-family: FontAwesome;
            display: inline-block;
            content: "\f005";
        }
        /*float:right để lật ngược các ngôi sao lại đúng theo thứ tự trong thực tế*/
        #rating > label {
            color: #ddd;
            float: right;
        }
        /*thêm màu cho sao đã chọn và các ngôi sao phía trước*/
        #rating > input:checked ~ label,
        #rating:not(:checked) > label:hover,
        #rating:not(:checked) > label:hover ~ label {
            color: #FFD700;
        }
            /* Hover vào các sao phía trước ngôi sao đã chọn*/
            #rating > input:checked + label:hover,
            #rating > input:checked ~ label:hover,
            #rating > label:hover ~ input:checked ~ label,
            #rating > input:checked ~ label:hover ~ label {
                color: #FFED85;
            }
    </style>
</head>


<script>
    function hitFavoriteIcon(x) {
        if (x.style.color == "red") {
            x.style.color = "black";
        } else {
            x.style.color = "red";
        }
    }
</script>

<div class="card-body">
    <h4 class="float-left">Chi tiết nhà trọ</h4>
    <p class="float-right" id="favorite">
        Thêm vào yêu thích:
        <i class="fa fa-heart" onclick="hitFavoriteIcon(this)"></i>
    </p>
</div>

<div class="card-body">
    <h5>Trạng thái</h5>
    <select disabled>
        <option checked>Đã được thuê</option>
        <option>Chưa được thuê</option>
    </select>
</div>
<div class="card-body">
    <h5>Thống kê trạng thái</h5>
