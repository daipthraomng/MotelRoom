                        <option>Không có nóng lạnh</option>
                    </select>
                </div>
                <div class="form-group col">
                    <label for="air-conditioner">Điều hòa</label>
                    <select class="form-control" id="air-conditioner" disabled>
                        <option selected>Có</option>
                        <option>Không</option>
                    </select>
                </div>
                <div class="form-group col">
                    <label for="balcony">Ban công</label>
                    <select class="form-control" id="balcony" disabled>
                        <option selected>Có</option>
                        <option>Không</option>
                    </select>
                </div>
                <div class="form-group col">
                    <label for="electic-water">Điện nước</label>
                    <select class="form-control" id="electic-water" disabled>
                        <option>Giá dân</option>
                        <option selected>Giá thuê</option>
                    </select>
                </div>
                <div class="form-group col">
                    <label for="electic-water">Giá điện</label>
                    <input type="text" class="form-control" id="electic-water" value="4000D" readonly />
                </div>
                <div class="form-group col">
                    <label for="electic-water">Giá nước</label>
                    <input type="text" class="form-control" id="electic-water" value="30000D" readonly />
                </div>
            </div>
            <div class="form-group">
                <label for="utilities">Tiện ích khác</label>
                <input type="text" class="form-control" id="utilities" value="Tủ lạnh" readonly />
            </div>
            <div class="form-group">
                <p>Ảnh thực tế:  </p>
            </div>
            <div class="form-row">
                <div class="form-group col">
                    <label for="host-name">Họ và tên chủ nhà</label>
                    <input type="text" id="host-name" class="form-control" value="Do Quang Anh" readonly>
                </div>
                <div class="form-group col">
                    <label for="host-name">Số điện thoại</label>
                    <input type="text" id="host-name" class="form-control" value="123" readonly>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="float-left">
            Đánh giá
            <span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
            </span>

        </h5>
        <div class="float-right">
            <span style="margin-right:10px; cursor:pointer" data-toggle="modal" data-target="#report">Report nhà trọ</span>
            <span style="cursor:pointer" data-toggle="modal" data-target="#review">Viết đánh giá của bạn</span>
        </div>
    </div>
    <div class="card-body" style="overflow-y:scroll; max-height: 400px">
        @for (int i = 0; i < 5; i++)
        {
            <div class="card m-2">
                <div class="card-header">
                    <h6>Do Quang Anh says: </h6>
                </div>
                <div class="card-body">
                    This is so goood!!
                </div>
            </div>

        }
    </div>
</div>


<!-- Danh gia va report nha tro -->
<div class="modal fade" id="review" tabindex="-1" role="dialog" aria-labelledby="reviewLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title float-left" id="reviewLabel">Đánh giá</h5>
                <div id="rating" class="float-right">
                    <input type="radio" id="star5" name="rating" value="5" />
                    <label class="full" for="star5" title="Awesome - 5 stars"></label>

                    <input type="radio" id="star4" name="rating" value="4" />
                    <label class="full" for="star4" title="Pretty good - 4 stars"></label>

                    <input type="radio" id="star3" name="rating" value="3" />
                    <label class="full" for="star3" title="Meh - 3 stars"></label>

                    <input type="radio" id="star2" name="rating" value="2" />
                    <label class="full" for="star2" title="Kinda bad - 2 stars"></label>

                    <input type="radio" id="star1" name="rating" value="1" />
                    <label class="full" for="star1" title="Sucks big time - 1 star"></label>
                </div>
            </div>
            <div class="modal-body">
                <form>
                    <label for="message-text" class="col-form-label">Message:</label>
                    <textarea class="form-control" id="message-text"></textarea>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Gửi</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="report" tabindex="-1" role="dialog" aria-labelledby="reportLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reportLabel">Report</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <label for="message-text" class="col-form-label">Message:</label>
                    <textarea class="form-control" id="message-text"></textarea>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Gửi</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
