@{
    ViewData["Title"] = "Home Page";
}
@model List<Motel>;

<div class="text-center">
    <h3>Cho thuê nhà trọ, phòng trọ tại Việt Nam</h3>
    @foreach(var motel in Model)
    {
    <div class ="card m-2">
        <div class="row">
            <div class="product-image" style="background-color: red">avatar location</div>
            <div class="col">
                <div class="product-title">
                    <a asp-controller="Home" asp-action="Detail" asp-route-id="@motel.MotelID">
                        @motel.MotelTitle
                    </a>
                </div>
                <div class="d-flex justify-content-around">
                    <div class="product-price">@motel.MotelPrice</div>
                    <div class="product-location">@motel.MotelLocation</div>
                </div>
                <div class="product-content">@motel.MotelContent</div>
                <div class="product-update-time">@motel.MotelUpdateTime</div>
            </div>
        </div>
    </div>
    }
</div>
