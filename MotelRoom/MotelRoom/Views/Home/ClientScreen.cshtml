@{
    ViewData["Title"] = "Client Screen";
    Layout = "_LayoutClientHome";
}
@model ClientScreenModel;

@section Styles {
    <link href="@Url.Content("~/Styles/ClientScreen.css")" rel="stylesheet" type="text/css" />
}

@*Khung tim kiem*@ 
<div class="box-collapse">
    <div class="title-box-d">
        <h3 class="title-d">Tìm Kiếm</h3>
    </div>
    <span class="close-box-collapse right-boxed ion-ios-close"></span>
    <div class="box-collapse-wrap form">
        @using (Html.BeginForm("ClientScreen", "Home"))
        {
            <form class="form-a">
                <div class="row">
                    <div class="col-md-12 mb-2">
                        <div class="form-group">
                            <input class="form-control" name="publicPlaceAround" id="publicPlaceAround" type="text" value="" placeholder="Khu vực (gần trường đại học, bệnh viện,...)">
                        </div>
                    </div>
                    <div class="col-md-3 mb-2">
                        <div class="form-group">
                            <select id="province" name="province" class="form-control col" asp-for="@Model.objAddress.ID" asp-items="@(new SelectList(Model.objAddress.listProvince,"idProvince","name"))">
                                <option value="">Tỉnh/Thành phố</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3 mb-2">
                        <div class="form-group">
                            <select id="district" name="district" class="form-control col" asp-for="@Model.objAddress.ID" asp-items="@(new SelectList(Model.objAddress.listDistrict,"idDistrict","name"))">
                                <option value="">Huyện/Quận</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3 mb-2">
                        <div class="form-group">
                            <select id="ward" name="ward" class="form-control col" asp-for="@Model.objAddress.ID" asp-items="@(new SelectList(Model.objAddress.listWard,"idWard","name"))">
                                <option value="">Xã/Phường/Thị Trấn</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3 mb-2">
                        <div class="form-group">
                            <select name="street" id="street" class="form-control col" asp-for="@Model.objAddress.ID" asp-items="@(new SelectList(Model.objAddress.listStreet,"idStreet","name"))">
                                <option value="">Đường</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-6 mb-2">
                        <div class="form-group">
                            <label for="priceMin">Giá thấp nhất</label>
                            <input class="form-control col" type="number" id="priceMin" name="priceMin" value="0">
                        </div>
                    </div>

                    <div class="col-md-6 mb-2">
                        <div class="form-group">
                            <label for="priceMax">Giá cao nhất</label>
                            <input class="form-control col" type="number" id="priceMax" name="priceMax" value="10000000">
                        </div>
                    </div>

                    <div class="col-md-6 mb-2">
                        <div class="form-group">
                            <select class="form-control col" name="typeRoom" id="typeRoom">
                                <option selected value="">Loại phòng</option>
                                <option value="Phòng trọ">Phòng trọ</option>
                                <option value="Chung cư mini">Chung cư mini</option>
                                <option value="Nhà nguyên căn">Nhà nguyên căn</option>
                                <option value="Chung cư nguyên căn">Chung cư nguyên căn</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 mb-2">
                        <div class="form-group">
                            <select class="form-control col" name="area" id="area">
                                <option selected value='0,2000'>Diện tích</option>
                                <option value='0,10'>Nhỏ hơn 10m2</option>
                                <option value='10,20'>10-20m2</option>
                                <option value='20,30'>20-30m2</option>
                                <option value='30,200'>Lớn hơn 30m2</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 mb-2">
                        <div class="form-group">
                            <select class="form-control col" name="bathroom" id="bathroom">
                                <option selected value="">Phòng tắm</option>
                                <option value="Khép kín">Khép kín</option>
                                <option value="Chung chủ">Chung chủ</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 mb-2">
                        <div class="form-group">
                            <select class="form-control col" name="heater" id="heater">
                                <option selected value="">Nóng lạnh</option>
                                <option value="yes">Có</option>
                                <option value="no">Không</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-md-6 mb-2">
                        <select class="form-control col" name="kitchen" id="kitchen">
                            <option selected value="">Phòng bếp</option>
                            <option value="Khu bếp riêng">Khu bếp riêng</option>
                            <option value="Khu bếp chung">Khu bếp chung</option>
                            <option value="Không nấu ăn">Không nấu ăn</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-2">
                        <div class="form-group">
                            <select class="form-control col" name="airCondition" id="airCondition">
                                <option selected value="">Điều hòa</option>
                                <option value="yes">Có</option>
                                <option value="no">Không</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6 mb-2">
                        <div class="form-group">
                            <select class="form-control col" name="balcony" id="balcony">
                                <option selected value="">Ban công</option>
                                <option value="yes">Có</option>
                                <option value="no">Không</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <button type="submit" id="btnSearch" class="btn btn-b">Tìm kiếm</button>
                    </div>
                </div>
            </form>
        }
    </div>
</div>
@*Ket thuc khung tim kiem*@

<div class="container">
    <h3>Cho thuê nhà trọ, phòng trọ tại Việt Nam</h3>
    @foreach (var item in Model.listRoomSummary)
    {
        <div class="card m-3 p-1">
            <a class="card-block stretched-link text-decoration-none text-dark" asp-controller="Home" asp-action="RoomInfo" asp-route-idRoom="@item.idRoom">
                <div class="row">
                    <div class="product-image col-md-2"><img src="@item.srcImage" /></div>
                    <div class="col">
                        <div class="product-title mt-1">
                            <strong>@item.title</strong>
                        </div>
                        <div class="d-flex mt-1">
                            <div class="mr-3 product-price font-weight-bold">@item.price đồng/tháng</div>
                            <div class="mr-3 product-area">@item.area m2</div>
                            <div class="product-location">@item.streetName,@item.wardName,@item.districtName,@item.provinceName</div>
                        </div>
                        <div class="product-content text-muted mt-1">@item.description</div>
                        <div class="product-update-time text-muted mt-1">@item.numberDayPosted</div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<div id="divResult"></div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/search.js"></script>
