@{
    ViewData["Title"] = "Client Screen";
    Layout = "_Layout2";
}
@model List<Motel>;

<head>
    <style>
        .selectBox {
            position: relative;
        }

            .selectBox select {
                width: 100%;
            }

        .overSelect {
            position: absolute;
            left: 0;
            right: 0;
            top: 0;
            bottom: 0;
        }

        #checkboxes {
            display: none;
            border: 1px #dadada solid;
        }

            #checkboxes label {
                display: block;
            }

                #checkboxes label:hover {
                    background-color: #1e90ff;
                }
    </style>
</head>

<script>
    var expanded = false;

    function showCheckboxes() {
        var checkboxes = document.getElementById("checkboxes");
        if (!expanded) {
            checkboxes.style.display = "block";
            expanded = true;
        } else {
            checkboxes.style.display = "none";
            expanded = false;
        }
    }
</script>

<form class="container-fluid row">
    <input class="col" type="text" placeholder="Khu vực">
    <select class="form-control col" id="motel-type">
        <option selected disabled>Loại nhà</option>
        <option>Phòng trọ</option>
        <option>Chung cư mini</option>
        <option>Nhà nguyên căn</option>
        <option>Chung cư nguyên căn</option>
    </select>
    <select class="form-control col" id="price">
        <option selected disabled>Khoảng giá</option>
        <option>1-3 triệu</option>
        <option>3-5 triệu</option>
        <option>5-10 triệu</option>
        <option>10-40 triệu</option>
    </select>
    <select class="form-control col" id="area">
        <option selected disabled>Diện tích</option>
        <option><= 30m2</option>
        <option>30-50m2</option>
        <option>50-100m2</option>
        <option>>= 100m2</option>
    </select>
    <select class="form-control col" id="kitchen">
        <option selected disabled>Bếp</option>
        <option>Khu bếp riêng</option>
        <option>Khu bếp chung</option>
        <option>Không nấu ăn</option>
    </select>
    <select class="form-control col" id="kitchen">
        <option selected disabled>Phòng tắm</option>
        <option>Chung</option>
        <option>Khép kín</option>
    </select>
    <div class="col">
        <div class="selectBox" onclick="showCheckboxes()">
            <select>
                <option>Mở rộng</option>
            </select>
            <div class="overSelect"></div>
        </div>
        <div id="checkboxes" style="position:fixed; z-index:10; background:white">
            <label for="ac">
                <input type="checkbox" id="ac" />Điều hòa
            </label>
            <label for="heater">
                <input type="checkbox" id="heater" />Nóng lạnh
            </label>
            <label for="balcony">
                <input type="checkbox" id="balcony" />Ban công
            </label>
        </div>
    </div>
    <button class="btn btn-primary">Tìm kiếm</button>
</form>

    <div class="container">
        <h3>Cho thuê nhà trọ, phòng trọ tại Việt Nam</h3>
        @foreach (var motel in Model)
        {
            <div class="card m-2">
                <a class="card-block stretched-link text-decoration-none text-dark" asp-controller="Home" asp-action="RoomInfo" asp-route-id="">
                    <div class="row">
                        <div class="product-image" style="background-color: red">avatar location</div>
                        <div class="col">
                            <div class="product-title">
                                @motel.MotelTitle
                            </div>
                            <div class="d-flex">
                                <div class="mr-3 product-price font-weight-bold">@motel.MotelPrice/tháng</div>
                                <div class="product-location">@motel.MotelLocation</div>
                            </div>
                            <div class="product-content text-muted">@motel.MotelContent</div>
                            <div class="product-update-time text-muted">@motel.MotelUpdateTime</div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
