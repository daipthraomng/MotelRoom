@model AddressModel;
@{
    //ViewData["Title"] = "Post Motel Information";
    Layout = "_LayoutHost";
}


<div class="card m-3">
    <h5 class="card-header">
        Đăng Bài
    </h5>
    <div class="card-body">
        <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="HostScreen">
            <div class="form-group">
                <div class="form-row">
                    <div class="form-group col">
                        Tiêu đề
                        <input type="text" value="Phòng trọ rẻ đẹp nhất Hà Nội" class="form-control" id="title" placeholder="Tiêu đề">
                    </div>
                </div>
                <p>Địa chỉ</p>
                @*TODO: chuyển sang dạng select với dữ liệu sql province, district, ward, street*@
                <div class="form-row">
                    <div class="form-group col">
                        <label for="province">Tỉnh/Thành</label>
                        <select id="province" class="form-control" asp-for="ID" asp-items="@(new SelectList(Model.listProvince,"idProvince","name"))">
                            <option value="1">Select One</option>
                        </select>
                    </div>
                    <div class="form-group col">
                        <label for="district">Huyện/Quận</label>
                        <select id="district" class="form-control" asp-for="ID" asp-items="@(new SelectList(Model.listDistrict,"idDistrict","name"))">
                            <option value="1">Select One</option>
                        </select>
                    </div>
                    <div class="form-group col">
                        <label for="ward">Xã/Phường</label>
                        <select id="ward" class="form-control" asp-for="ID" asp-items="@(new SelectList(Model.listWard,"idWard","name"))">
                            <option value="1">Select One</option>
                        </select>
                    </div>
                </div>

                <div class="form-a row">
                    <div class="form-group col">
                        <label for="street">Đường</label>
                        <select id="street" class="form-control" asp-for="ID" asp-items="@(new SelectList(Model.listStreet,"idStreet","name"))">
                            <option value="1">Select One</option>
                        </select>
                    </div>
                    <div class="form-group col">
                        <label for="homeNo">Số nhà</label>
                        <input type="text" value="10" class="form-control" id="homeNo" placeholder="Địa chỉ">
                    </div>
                </div>

                <div class="form-group">
                    <label for="publicPlaceAround">Gần địa điểm công cộng</label>
                    <input type="text" value="Đại học quốc gia" class="form-control" id="publicPlaceAround" placeholder="Gần trường học/bệnh viện/...">
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label for="typeRoom">Kiểu phòng</label>
                        <select class="form-control" id="typeRoom">
                            <option selected>Phòng trọ</option>
                            <option>Chung cư mini</option>
                            <option>Nhà nguyên căn</option>
                            <option>Chung cư nguyên căn</option>
                        </select>
                    </div>
                    <div class="form-group col">
                        <label for="roomNo">Số lượng</label>
                        <input type="number" class="form-control" id="roomNo" name="roomNo" min="1" value="2">
                    </div>
                    <div class="form-group col">
                        <label for="area">Diện tích (m2)</label>
                        <input type="text" class="form-control" id="area" value="25" />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col">
                        <label for="price">Giá phòng (đồng)</label>
                        <input type="text" class="form-control" id="price" min="1" value="2500000" />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col">
                        <label for="bathroom">Phòng tắm</label>
                        <select class="form-control" id="bathroom" required>
                            <option selected>Khép kín</option>
                            <option>Chung chủ</option>
                        </select>
                    </div>
                    <div class="form-group col">
                        <label for="heater">Nóng lạnh</label>
                        <select class="form-control" id="heater" required>
                            <option selected>Có</option>
                            <option>Không</option>
                        </select>
                    </div>
                    <div class="form-group col">
                        <label for="kitchen">Phòng bếp</label>
                        <select class="form-control" id="kitchen" required>
                            <option selected>Khu bếp riêng</option>
                            <option>Khu bếp chung</option>
                            <option>Không nấu ăn</option>
                        </select>
                    </div>
                    <div class="form-group col">
                        <label for="airCondition">Điều hòa</label>
                        <select class="form-control" id="airCondition" required>
                            <option selected>Có</option>
                            <option>Không</option>
                        </select>
                    </div>
                    <div class="form-group col">
                        <label for="balcony">Ban công</label>
                        <select class="form-control" id="balcony" required>
                            <option selected>Có</option>
                            <option>Không</option>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label for="electricityPrice">Giá điện</label>
                        <input type="text" value="3000" class="form-control" id="electricityPrice" placeholder="Giá điện theo (kW/h)" />
                    </div>
                    <div class="form-group col">
                        <label for="waterPrice">Giá nước</label>
                        <input type="text" value="2000" class="form-control" id="waterPrice" placeholder="Giá nước theo (m3)" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="otherUtility">Tiện ích khác</label>
                    <input type="text" value="Khong co tiện ích" class="form-control" id="otherUtility" placeholder="Tủ lạnh/Máy giặt/Giường tủ" />
                </div>
                <div class="form-group">
                    <label for="image">Chọn ít nhất 3 ảnh: </label>
                    <input type="file" id="image" name="files" multiple>
                </div>
                <div class="form-group">
                    <label for="description">Thông tin bổ sung</label>
                    <input type="text" value="Không thông tin bổ sung" class="form-control" id="description" placeholder="" />
                </div>
                <div class="time-post form-row mb-3">
                    <div class="col-5">
                        <label for="timeDisplay">Thời gian hiển thị</label>
                        <input type="number" id="timeDisplay" class="form-control" name="quantity" min="1" max="11" value="1">
                    </div>
                    <div class="col-2">
                        <label for="unitTimeId">Đơn vị</label>
                        <select class="form-control" id="unitTimeId">
                            <option value="1" selected>Ngày</option>
                            <option value="2">Tuần</option>
                            <option value="3">Tháng</option>
                            <option value="4">Năm</option>
                        </select>
                    </div>
                    <div class="col-5">
                        <label for="pricePost">Giá tiền bài đăng</label>
                        <input class="form-control" disabled type="text" id="pricePost" value="5000">
                    </div>
                </div>

                <div class="info-submit">
                    <button id="btnPostNews" type="submit" class="btn btn-primary">Đăng bài</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/postnews.js"></script>