
@{
    ViewData["Title"] = "Register";
}

<div class="card m-3">
    <h5 class="card-header">
        ĐĂNG KÝ
    </h5>
    <div class="card-body">
        <form>
            <div class="form-group"> <label for="email">Địa chỉ email</label> <input type="email" class="form-control" id="email" placeholder="Enter email"> </div>
            <div class="form-group"> <label for="pwd">Mật khẩu</label> <input type="password" class="form-control" id="pwd" placeholder="Enter password"> </div>
            <div class="form-group"> <label for="pwd">Nhập lại mật khẩu</label> <input type="password" class="form-control" id="pwd" placeholder="Enter password again"> </div>
            <button type="submit" class="btn btn-primary">ĐĂNG KÝ</button>
        </form>
    </div>
</div>

