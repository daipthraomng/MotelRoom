
@{
    ViewData["Title"] = "Register";
}

<div class="card m-3">
    <h5 class="card-header">
        ĐĂNG KÝ
    </h5>
    <div class="card-body">
        <form>
            <div class="form-group"> <label for="username">Tên người dùng</label> <input type="text" class="form-control" id="username" placeholder="Nhập username"> </div>
            <div class="form-group"> <label for="pwd">Mật khẩu</label> <input type="password" class="form-control" id="pwd" placeholder="Enter password"> </div>
            <div class="form-group"> <label for="pwd">Nhập lại mật khẩu</label> <input type="password" class="form-control" id="pwd" placeholder="Enter password again"> </div>
            <button type="submit" class="btn btn-primary">ĐĂNG KÝ</button>
        </form>
    </div>
    <div class="card-footer">
        Bạn là chủ nhà trọ? <a class="text-decoration-none" asp-controller="Home" asp-action="RegisterForHost">Đăng ký tài khoản</a>
    </div>
</div>

