@{
    ViewData["Title"] = "Favourite";
    Layout = "_LayoutClientHome";
}
@model InterestModel;

@section Styles {
    <link href="@Url.Content("~/Styles/index.css")" rel="stylesheet" type="text/css" />
}
<div class="container">
    <h3 class="mt-4 mb-4">Danh sách yêu thích</h3>
    @foreach (var item in Model.listRoomSummary)
    {
        <div class="card m-3 p-1">
            <a class="card-block stretched-link text-decoration-none text-dark" asp-controller="Home" asp-action="RoomInfo" asp-route-idRoom="@item.idRoom">
                <div class="row">
                    <div class="product-image col-md-2"><img src="@item.srcImage" /></div>
                    <div class="col">
                        <div class="product-title mt-1">
                            <strong>@item.title</strong>
                        </div>
                        <div class="d-flex mt-1">
                            <div class="mr-3 product-price font-weight-bold">@item.price đồng/tháng</div>
                            <div class="mr-3 product-area">@item.area m2</div>
                            <div class="product-location">@item.streetName,@item.wardName,@item.districtName,@item.provinceName</div>
                        </div>
                        <div class="product-content text-muted mt-1">@item.description</div>
                        <div class="product-update-time text-muted mt-1">@item.numberDayPosted</div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>